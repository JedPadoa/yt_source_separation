{
  "name": "ytmp3-electron",
  "version": "0.1.0",
  "description": "YouTube to MP3 converter app with audio separation capabilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "keywords": [
    "youtube",
    "mp3",
    "converter",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "ffmpeg-static": "^5.2.0",
    "python-shell": "^5.0.0",
    "ytdl-core": "^4.11.5"
  },
  "build": {
    "appId": "com.ytmp3.app",
    "productName": "yt2mp3",
    "files": [
      "**/*",
      "python/dist/engine*"
    ],
    "extraResources": [
      {
        "from": "python/dist/engine",
        "to": "python/engine"
      }
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "resources/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png",
      "category": "Utility"
    },
    "dmg": {
      "icon": "resources/icon.icns",
      "title": "Install YouTube MP3 Converter"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
